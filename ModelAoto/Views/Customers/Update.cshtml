@model ModelAoto.Models.Entities.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Müşteri Güncelle</h2>
<br />

@using (Html.BeginForm("Update", "Customers", FormMethod.Post))
{
    @Html.LabelFor(x => x.FirstName)
    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })
    <br />

    @Html.LabelFor(x => x.LastName)
    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.LastName, "", new { @style = "color:red" })
    <br />

    @Html.LabelFor(x => x.City.CityName)
    @Html.DropDownListFor(x => x.CityId, (List<SelectListItem>)ViewBag.Cities, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })
    <br />

    @Html.LabelFor(x => x.District.DistrictName)
    @Html.DropDownListFor(x => x.DistrictId, (List<SelectListItem>)ViewBag.Districts, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Status)
    @Html.CheckBoxFor(x => x.Status)
    <br />



    <button class="btn btn-outline-primary">Güncelle</button>
}

