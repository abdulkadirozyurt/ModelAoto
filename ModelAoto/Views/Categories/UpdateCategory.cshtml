@model ModelAoto.Models.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelle</h2>
<br />

@using (Html.BeginForm("UpdateCategory", "Categories", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.CategoryName)
        @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control"})
    </div>
    <button class="btn btn-warning">Güncelle</button>
}

