@model List<ModelAoto.Models.Entities.Employee>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detayları</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.department Departmanı</li>
</ol>



<table class="table table-hover">
    <tr>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Personel Fotoğraf</th>
        <th></th>
    </tr>

   @foreach (var item in Model)
   {
       <tr>
           <td><img src="@item.Image" style="width:100px" /></td>
           <td>@item.FirstName</td>
           <td>@item.LastName</td>
           <td><a href="/Departments/EmployeeSalesDetails/@item.Id" class="btn btn-warning">Satışlar</a></td>

       </tr>
   }
</table>