@model List<ModelAoto.Models.Entities.Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Markalar</h2>
<br />
<a class="btn btn-outline-primary mb-2" href="/Brands/Add/">Marka Ekle</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>Marka Adı</th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandName</td>

            <td>
                <a href="/Brands/Update/@item.Id" class="btn btn-outline-success">Güncelle</a>
                <a href="/Brands/Delete/@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>




        </tr>
    }


</table>

