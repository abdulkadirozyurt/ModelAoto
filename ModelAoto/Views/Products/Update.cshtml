@model ModelAoto.Models.Entities.Product
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Ürün Güncelle</h2>
<br />




@using (Html.BeginForm("Update", "Products", FormMethod.Post))
{

    @Html.LabelFor(x => x.ProductName)
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Brand.BrandName)
    @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.brands, new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.BrandId, new { @class = "form-control" })*@
    <br />

    @Html.LabelFor(x => x.Category.CategoryName)
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.StockAmount)
    @Html.TextBoxFor(x => x.StockAmount, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.PurchasePrice)
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.SalePrice)
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Status)
    @Html.CheckBoxFor(x => x.Status@*, new { @class = "form-control" }*@)
    <br />

    @Html.LabelFor(x => x.Image)
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>


}
