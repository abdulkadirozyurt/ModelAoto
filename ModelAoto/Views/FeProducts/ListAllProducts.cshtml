@model List<ModelAoto.Models.Entities.Product>
@{
    ViewBag.Title = "ListAllProducts";
    Layout = "~/Views/Shared/_FeLayout.cshtml";
}


<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
       


        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
               

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="@item.Image" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.ProductName</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>@item.SalePrice</h6><h6 class="text-muted ml-2">@*<del>$123.00</del>*@</h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/FeProducts/ListProductDetails/@item.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Detaylar</a>
                                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Sepete Ekle</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
       
    </div>
</div>

