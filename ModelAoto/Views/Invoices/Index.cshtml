@model List<ModelAoto.Models.Entities.Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Faturalar</h2>
<br />
<a class="btn btn-outline-primary mb-2" href="/Invoices/Add/">Yeni Fatura Girişi</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Seri No</th>
        <th>Fatura No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Gönderici</th>
        <th>Alıcı</th>
        <th>Toplam</th>        
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.SerialNumber</td>
            <td>@item.InvoiceNo</td>
            <td>@item.TaxOffice</td>
            <td>@item.Date</td>
            <td>@item.Time</td>
            <td>@item.Sender</td>
            <td>@item.Reciepent</td>
            <td>@item.TotalCost</td>         

            <td>
                <a href="/Invoices/Details/@item.Id" class="btn btn-outline-warning">Detaylar</a>
                <a href="/Invoices/Update/@item.Id" class="btn btn-outline-success">Güncelle</a>



            </td>




        </tr>

    }


</table>

